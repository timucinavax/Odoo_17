<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="credit_report_wizard_view_form" model="ir.ui.view">
        <field name="name">credit.report.wizard.form</field>
        <field name="model">credit.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="subscription_ids" widget="many2many_tags"/>
                        <field name="state"/>
                    </group>
                </group>
                <footer>
                    <button name="%(recurring_subscription.action_report_credit)d"
                            string="PDF"
                            type="action"
                            class="btn-primary"/>
                    <button name="action_print"
                            string="XLSX"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_credit_report_wizard" model="ir.actions.act_window">
        <field name="name">Credit Report</field>
        <field name="res_model">credit.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="credit_report_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>