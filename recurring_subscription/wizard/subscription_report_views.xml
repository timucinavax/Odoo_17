<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="subscription_report_wizard_view_form" model="ir.ui.view">
        <field name="name">subscription.report.wizard.form</field>
        <field name="model">subscription.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="subscription_ids"
                               readonly="frequency"
                               widget="many2many_tags"/>
                        <field name="frequency"/>
                    </group>
                    <group>
                        <field name="start_date" invisible="frequency != 'date'"/>
                        <field name="end_date" invisible="frequency != 'date'"/>
                    </group>
                </group>
                <footer>
                    <button name="action_report_subscription"
                            string="PDF"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_print"
                            string="XLSX"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_subscription_report_wizard"
            model="ir.actions.act_window">
        <field name="name">Subscription Report</field>
        <field name="res_model">subscription.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="subscription_report_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>