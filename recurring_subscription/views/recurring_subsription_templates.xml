<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="subscription_data" name="Subscription Details">
        <t t-call="portal.portal_layout">
            <div class="mb-0 py-2 col-12 s_website_form_submit"
                 data-name="Submit Button">
                <div style="width: 200px;" class="s_website_form_label"/>
                <a href="/rec-subscription/new"
                   class="btn btn-primary s_website_form_send">Create
                </a>
            </div>
            <div>
                <h2>
                    <center>
                        <span>Subscriptions</span>
                    </center>
                </h2>
            </div>
            <table class="table table-striped">
                <thead style="font-size:23px">
                    <tr>
                        <th>Subscription</th>
                        <th>Customer</th>
                        <th>Product</th>
                        <th>Due Date</th>
                        <th>Amount</th>
                        <th>State</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="record" t-as="rec">
                        <tr>
                            <td>
                                <a t-attf-href="/rec-subscription/#{rec.id}">
                                    <span t-field="rec.order"/>
                                </a>
                            </td>
                            <td>
                                <span t-field="rec.partner_id"/>
                            </td>
                            <td>
                                <span t-field="rec.product_id"/>
                            </td>
                            <td>
                                <span t-field="rec.due_date"/>
                            </td>
                            <td>
                                <span t-field="rec.recurring_amount"/>
                            </td>
                            <td>
                                <span t-field="rec.state"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
    <template id="subscription_form" name="Subscription Form">
        <t t-call="website.layout">
            <t t-set="products"
               t-value="request.env['product.product'].sudo().search([])"/>
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt40 pb40 o_colored_level ">
                    <div class="container s_allow_columns">
                        <div class="row">
                            <div class="col-lg-8 mt-4 mt-lg-0">
                                <section class="container">
                                    <form action="/rec-subscription/create"
                                          method="post">
                                        <div class="s_website_form_rows row s_col_no_bgcolor">
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom s_website_form_required">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                           style="width: 200px"
                                                           for="partner_id">
                                                        <span class="s_website_form_label_content">
                                                            Name
                                                        </span>
                                                        <span class="s_website_form_mark">
                                                            *
                                                        </span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <t t-if="request.env.user.has_group('recurring_subscription.group_manager')">
                                                            <t t-set="partners"
                                                               t-value="request.env['res.partner'].sudo().search([])"/>
                                                            <select name="partner_id"
                                                                    id="partner_id"
                                                                    class="form-control">
                                                                <t t-foreach="partners"
                                                                   t-as="partner">
                                                                    <option t-att-value="partner.id"
                                                                            t-esc="partner.name"/>
                                                                </t>
                                                            </select>
                                                        </t>
                                                        <t t-else="">
                                                            <t t-set="partner"
                                                               t-value="request.env['website.visitor']._get_visitor_from_request().partner_id"/>
                                                            <input name="partner_id"
                                                                   class="form-control"
                                                                   type="text"
                                                                   placeholder="Name"
                                                                   t-att-value="partner.id"
                                                                   hidden="True"/>
                                                            <input name="partner_name"
                                                                   class="form-control"
                                                                   type="text"
                                                                   placeholder="Name"
                                                                   t-att-value="partner.name"/>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                           style="width: 200px"
                                                           for="product_id">
                                                        <span class="s_website_form_label_content">
                                                            Product
                                                        </span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <select name="product_id"
                                                                class="form-control">
                                                            <t t-foreach="products"
                                                               t-as="product">
                                                                <option t-att-value="product.id"
                                                                        t-esc="product.name"
                                                                        t-att-data-price="product.list_price">
                                                                    <t t-set="price"
                                                                       t-value="product.list_price"/>
                                                                </option>
                                                            </t>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                           style="width: 200px"
                                                           for="product_id">
                                                        <span class="s_website_form_label_content">
                                                            Amount
                                                        </span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input name="list_price"
                                                               class="form-control"
                                                               id="list_price"
                                                               type="number"
                                                               step="0.01"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                           style="width: 200px"
                                                           for="date">
                                                        <span class="s_website_form_label_content">
                                                            Date
                                                        </span>
                                                        <span class="s_website_form_mark">
                                                            *
                                                        </span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input name="date"
                                                               type="date"
                                                               class="form-control"
                                                               data-date-format="yyyy-MM-dd"
                                                               required="True"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label"
                                                           style="width: 200px"
                                                           for="due_date">
                                                        <span class="s_website_form_label_content">
                                                            Due Date
                                                        </span>
                                                        <span class="s_website_form_mark">
                                                            *
                                                        </span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input name="due_date"
                                                               type="date"
                                                               class="form-control"
                                                               data-date-format="yyyy-MM-dd"
                                                               required="True"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_field s_website_form_custom">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <div style="width: 200px;">
                                                        <button class="btn btn-primary"
                                                                type="submit">
                                                            Create
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <template id="subscription_details" name="Subscription Details">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt40 pb40 o_colored_level "
                         data-snippet="s_text_block">
                    <div class="container s_allow_columns">
                        <div class="row">
                            <div class="col-lg-8 mt-4 mt-lg-0">
                                <div class="row" id="intro_row">
                                    <h2 class="my-0 col-12 col-lg flex-grow-1 mb-1 mb-lg-0">
                                        <em t-out="subscription.order"/>
                                    </h2>
                                </div>
                                <div id="content">
                                    <div id="informations" class="row">
                                        <!-- Information -->
                                        <div id="subscription_info"
                                             class="col-12 col-lg-6 mb-4">
                                            <span id="subscription_info_title">
                                                <h4 class="mb-1">Subscription
                                                    Information
                                                </h4>
                                                <hr class="mt-1 mb-2"/>
                                            </span>
                                            <table class="table table-borderless table-sm">
                                                <tbody style="white-space:nowrap"
                                                       id="sale_info_table">
                                                    <tr>
                                                        <th class="ps-0 pb-0">
                                                            Subscription :
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.order"/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="subscription.date">
                                                        <th class="ps-0 pb-0">
                                                            Date:
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.date"
                                                                  t-options='{"widget": "date"}'/>
                                                        </td>
                                                    </tr>
                                                    <tr t-if="subscription.due_date">
                                                        <th class="ps-0 pb-0">
                                                            Due Date:
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.due_date"
                                                                  t-options='{"widget": "date"}'/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0 pb-0">
                                                            Customer Name:
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.partner_id"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0 pb-0">
                                                            Establishment ID:
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.establishment"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0 pb-0">
                                                            Next Billing :
                                                        </th>
                                                        <td class="w-100 pb-0 text-wrap">
                                                            <span t-field="subscription.next_billing"
                                                                  t-options='{"widget": "date"}'/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <section id="details"
                                                 style="page-break-inside: auto;">
                                            <div class="table-responsive">
                                                <table class="table table-sm"
                                                       id="subscription_order_table">
                                                    <thead class="bg-100">
                                                        <tr>
                                                            <th class="text-start"
                                                                id="product_name_header">
                                                                Product
                                                            </th>
                                                            <th class="text-end"
                                                                id="subtotal_header">
                                                                <span>Amount
                                                                </span>
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="sale_tbody">
                                                        <tr>
                                                            <td id="product_name">
                                                                <span t-field="subscription.product_id"/>
                                                            </td>
                                                            <td class="text-end"
                                                                id="subtotal">
                                                                <span class="oe_order_line_price_subtotal"
                                                                      t-field="subscription.recurring_amount"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </section>
                                        <section t-if="subscription.terms"
                                                 class="mt-4">
                                            <h4 class="">Terms and conditions
                                            </h4>
                                            <hr class="mt-0 mb-1"/>
                                            <span t-field="subscription.terms"/>
                                        </section>
                                        <div class="form-group"
                                             groups="recurring_subscription.group_manager">
                                            <a t-attf-href="/rec-subscription/billing-schedule/#{subscription.id}">
                                                <button class="form-control btn btn-primary"
                                                        style="width: 200px;">
                                                    Run Billing Schedule
                                                </button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    <record id="rec_subscription" model="website.menu">
        <field name="name">Subscription</field>
        <field name="url">/rec-subscription</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>
    <record id="rec_subscription_credit" model="website.menu">
        <field name="name">Credit</field>
        <field name="url">/rec-subscription/credit</field>
        <field name="parent_id" ref="website.main_menu"/>
    </record>
</odoo>